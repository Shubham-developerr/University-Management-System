@model Fees
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Edit</h1>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pt-2">
            <h2 class="text-primary">Edit Item</h2>
            <hr>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Course.Name"></label>
            <input asp-for="Course.Name" asp-items="@Model.Course.Name" class="from-control" />
            <span asp-validation-for="Course.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CourseFee"></label>
            <input asp-for="CourseFee" class="from-control"/>
            <span asp-validation-for="CourseFee" class="text-danger"></span>
        </div>
        <button tye="submit" class="btn btn-primary">Update</button>
        <a asp-area="Admin" asp-controller="Fees" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>




